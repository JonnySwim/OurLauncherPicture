@using OurLauncherWeb.Models
@using System.IO
@using LauncherItem = OurLauncherWeb.Models.Launcher.LauncherItem

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-grid.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-reboot.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-utilities.min.css" rel="stylesheet">
    <link href="~/css/jquery-ui.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    <!--Script-Import-->
    <script>
        if (typeof module === 'object') { window.module = module; module = undefined; }
        window.addEventListener("keydown", function (e) {
            e.preventDefault();
        })
    </script>
    <script src="~/Scripts/jquery-3.6.0.min.js" defer></script>
    <script src="~/Scripts/bootstrap.min.js" defer></script>
    <script src="~/Scripts/jquery.keymap.js" defer></script>
    <script src="~/Scripts/jquery-ui.min.js" defer></script>
    <script src="~/Scripts/electronWindow.js" defer></script>
    <script src="~/Scripts/PictureHelper.js" defer></script>
    <script src="~/Scripts/AjaxHelper.js" defer></script>
    <!--END-Script-Import-->

    <div class="d-flex justify-content-end titlebar dark_transparent_bg sticky-top">
        <button class="close" style="color: white;" onclick="ElectronWindow.prototype.ReloadWindow()">↻</button>
        <button class="close" style="color: white;" onclick="ElectronWindow.prototype.CloseWindow()">&times;</button>
    </div>

    <div class="d-flex flex-wrap" style="-webkit-app-region: no-drag; overflow: auto;" id="content">
        @RenderBody()
    </div>

</body>
</html>